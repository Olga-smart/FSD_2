{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "airbnb-base",
    "plugin:fsd/all"
  ],
  "plugins": [
    "fsd"
  ],
  "rules": {
    "no-underscore-dangle": 0 // Airbnb rule is overridden by MetaLamp rule
  },
  "ignorePatterns": ["webpack.config.js"],
  "globals": {
    "jQuery": true
  }
}
