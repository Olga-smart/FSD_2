include ../../components/datepicker/datepicker
include ../../components/dropdown/dropdown
include ../../components/button/button

mixin card-find-room
  .card-find-room.card
    .card-find-room__title.h1 Найдём номера под ваши пожелания
    form.card-find-room__form
      +datepicker({
        inputClass: "date-start",
        label: "прибытие"
      })

      +datepicker({
        inputClass: "date-end",
        label: "выезд"
      })

      +dropdown({
        label: "гости",
        class: "iqdropdown-guests",
        wrapperClass: "card-find-room__dropdown",
        items: [
          {
            id: "guests-item1",
            text: "Взрослые"
          },
          {
            id: "guests-item2",
            text: "Дети"
          },
          {
            id: "guests-item3",
            text: "Младенцы"
          }
        ],
        buttonsClass: "hidden",
      })

      +button({
        text: "Подобрать номер",
        type: "submit",
        view: ["fill", "full-width", "arrow_right"],
        class: "button_hovered"
      })