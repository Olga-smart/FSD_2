include ../../components/like/like

mixin comment(options)
  .comment
    img.comment__avatar(
      src = options.avatar
    )
    div
      p.comment__name= options.name
      p.comment__date.js-comment__date= options.date
    .comment__like-container
      +like({
        value: options.like.value,
        class: options.like.class,
        checked: options.like.checked
      }) 
    .comment__text= options.text 
    
    
    