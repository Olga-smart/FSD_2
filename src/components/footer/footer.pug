include ../../components/logo/logo
include ../../components/input-with-button/input-with-button

mixin footer

  footer.footer
    .footer__container
        .footer__logo-column
          .footer__logo
            +logo
          p.footer__text-under-logo Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        dl.footer__menu
          dt.footer__heading Навигация
          dd.footer__menu-list-container
            ul.footer__menu-list
              li
                a.footer__menu-link(href="/mock-address/change-me") О нас 
              li
                a.footer__menu-link(href="/mock-address/change-me") Новости
              li
                a.footer__menu-link(href="/mock-address/change-me") Служба поддержки
              li
                a.footer__menu-link(href="/mock-address/change-me") Услуги
          dt.footer__heading О нас
          dd.footer__menu-list-container
            ul.footer__menu-list
              li
                a.footer__menu-link(href="/mock-address/change-me") О сервисе 
              li
                a.footer__menu-link(href="/mock-address/change-me") Наша команда
              li
                a.footer__menu-link(href="/mock-address/change-me") Вакансии
              li
                a.footer__menu-link(href="/mock-address/change-me") Инвесторы
          dt.footer__heading Служба поддержки
          dd.footer__menu-list-container
            ul.footer__menu-list
              li
                a.footer__menu-link(href="/mock-address/change-me") Соглашения 
              li
                a.footer__menu-link(href="/mock-address/change-me") Сообщества
              li
                a.footer__menu-link(href="/mock-address/change-me") Связь с нами
        .footer__subscription-column
          .footer__heading Подписка
          p.footer__subscription-text Получайте специальные предложения и новости сервиса
          +input-with-button({
            placeholder: "Email",
            type: "email",
            name: "email"
          })
    .footer__bottom
      .footer__bottom-container
          p.footer__copyright Copyright © 2018 Toxin отель. Все права зачищены.
          ul.footer__socials
            li.footer__socials-item
              a.footer__socials-link(
                  href = "/mock-address/change-me"
                  target = "_blank"
                  rel = "noopener noreferrer"
                )
                img.footer__socials-img(
                  src=require("../../../components/footer/img/twitter.svg")
                  alt="Twitter"
                  width = 24
                  height = 24
                )
            li.footer__socials-item
              a.footer__socials-link(
                  href = "/mock-address/change-me"
                  target = "_blank"
                  rel = "noopener noreferrer"
                )
                img.footer__socials-img(
                  src=require("../../../components/footer/img/facebook.svg")
                  alt="Facebook"
                  width = 24
                  height = 24
                )
            li.footer__socials-item
              a.footer__socials-link(
                  href = "/mock-address/change-me"
                  target = "_blank"
                  rel = "noopener noreferrer"
                )
                img.footer__socials-img(
                  src=require("../../../components/footer/img/instagram.svg")
                  alt="Instagram"
                  width = 24
                  height = 24
                )   
                
                
                
                
                
                