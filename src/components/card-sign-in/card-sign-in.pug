include ../../components/input/input
include ../../components/button/button

mixin card-sign-in
  .card-sign-in.card
    .card-sign-in__title.h1 Войти
    form.card-sign-in__form
      +input({
        placeholder: "Email",
        type: "email",
        name: "email",
        required: true
      }) 
      +input({
        placeholder: "Пароль",
        type: "password",
        name: "password",
        required: true
      })
      +button({
        class: "card-sign-in__submit-btn",
        text: "Войти",
        type: "submit",
        view: ["fill", "full-width", "arrow_right"]
      })
    .card-sign-in__footer
      p Нет аккаунта на Toxin?
      +button({
        text: "Создать",
        type: "button",
        view: "outline"
      })