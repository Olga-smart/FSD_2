include ../../components/input/input

mixin datepicker(options)
  if !options
    - options = {}
  
  +input({
    class: options.class,
    inputClass: "datepicker-here" + ' ' + options.inputClass,
    inputId: options.id,
    label: options.label,
    placeholder: options.placeholder,
    attributes: options.attributes
  })
  