  options.value - количество звёзд (0 - 5, по умолчанию 0)

svg(xmlns:xlink="http://www.w3.org/1999/xlink" class="visually-hidden")
  symbol(id="star" width="20" height="19" viewBox="0 0 20 19" fill="none")
    path(d="M10 15.25L3.8125 19L5.45312 11.9688L0.015625 7.23438L7.1875 6.625L10 0.015625L12.8125 6.625L19.9844 7.23438L14.5469 11.9688L16.1875 19L10 15.25Z" fill="url(#rateGradient)")
  symbol(id="star-empty" width="20" height="19" viewBox="0 0 20 19" fill="none")
    path(d="M10 13.4219L13.75 15.6719L12.7656 11.4062L16.0938 8.5L11.6875 8.125L10 4.09375L8.3125 8.125L3.90625 8.5L7.23438 11.4062L6.25 15.6719L10 13.4219ZM19.9844 7.23438L14.5469 11.9688L16.1875 19L10 15.25L3.8125 19L5.45312 11.9688L0.015625 7.23438L7.1875 6.625L10 0.015625L12.8125 6.625L19.9844 7.23438Z" fill="url(#rateGradient)")
    defs
      linearGradient(id="rateGradient" x1="10" y1="-2" x2="10" y2="22" gradientUnits="userSpaceOnUse")
        stop(offset="0" stop-color="#BC9CFF")
        stop(offset="1" stop-color="#8BA4F9")
      

mixin rate(options = {})
  - let value = options.value
  
  .rate
    svg.rate__star
      if value > 0
        use(href="#star")
      else
        use(href="#star-empty")
    svg.rate__star
      if value > 1
        use(href="#star")
      else
        use(href="#star-empty")
    svg.rate__star
      if value > 2
        use(href="#star")
      else
        use(href="#star-empty")
    svg.rate__star
      if value > 3
        use(href="#star")
      else
        use(href="#star-empty")
    svg.rate__star
      if value > 4
        use(href="#star")
      else
        use(href="#star-empty")