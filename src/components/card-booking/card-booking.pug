include ../../components/input/input
include ../../components/button/button
include ../../components/datepicker/datepicker
include ../../components/dropdown/dropdown

- function prettifyPrice(num)
  - let n = num.toString()
  - return n.replace(/(\d{1,3}(?=(?:\d\d\d)+(?!\d)))/g, "$1" + ' ')

mixin card-booking(options)
  .card-booking.card
    .card-booking__form
      .card-booking__title
        span №
        span.card-booking__number= ' ' + options.number + ' '
        - if (options.lux)
          span.card-booking__lux люкс
      .card-booking__price-container   
        span.card-booking__price !{prettifyPrice(options.price)}₽ 
        span в сутки 
      +datepicker({
        inputClass: "date-start card-booking__arrival",
        label: "прибытие",
        value: options.arrival
      })

      +datepicker({
        inputClass: "date-end card-booking__departure",
        label: "выезд",
        value: options.departure
      })

      .card-booking__dropdown
        +dropdown({
          label: "гости",
          class: "iqdropdown-guests",
          items: [
            {
              id: "guests-item1",
              text: "Взрослые",
              defaultcount: options.adults
            },
            {
              id: "guests-item2",
              text: "Дети",
              defaultcount: options.children
            },
            {
              id: "guests-item3",
              text: "Младенцы",
              defaultcount: options.babies
            }
          ],
          buttonsClass: "hidden",
        })  
    
      - let days = 0;
      - if (options.arrival && options.departure)
        - days = ( Date.parse(options.departure) - Date.parse(options.arrival) ) / (1000 * 3600 * 24)
      
      table.card-booking__table
        tbody
          tr          
            td !{prettifyPrice(options.price)}₽ х 
              span.card-booking__days !{days}
              - if ([1, 21, 31, 41, 51, 61, 71, 81, 91].includes(days))
                span.card-booking__days-word  сутки
              - else
                span.card-booking__days-word  суток
            td.card-booking__price-for-x-days !{prettifyPrice(options.price * days)}₽
          tr
            td.card-booking__service-fee-label Сбор за услуги: 
              - if (options.discount)
                span.card-booking__discount скидка !{prettifyPrice(options.discount)}₽
              .card-booking__info-icon(data-tooltip="Подсказка по сборам за услуги") i 
            td.card-booking__service-fee !{prettifyPrice(options.serviceFee)}₽
          tr   
            td.card-booking__additional-service-fee-label Сбор за дополнительные услуги
              .card-booking__info-icon(data-tooltip="Подсказка по сборам за доп. услуги") i
            td.card-booking__additional-service-fee !{prettifyPrice(options.additionalServiceFee)}₽
        tfoot
          tr
            td 
              span Итого
            td.card-booking__total !{prettifyPrice( options.price * days + options.serviceFee - options.discount + options.additionalServiceFee )}₽

      +button({
        class: "card-booking__submit-btn",
        text: "Забронировать",
        type: "submit",
        view: ["fill", "full-width", "arrow_right"]
      })   