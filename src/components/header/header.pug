//-
  options.loggedIn - залогинен ли пользователь (true/false, по умолчанию false)
  options.userName - имя пользователя (если залогинен)

include ../../components/logo/logo
include ../../components/button/button

mixin header(options)
  if !options
    - options = {}
  
  header.header
    .container
      nav.header__nav
        button.header__burger.js-header__burger
          span.visually-hidden Меню
        .header__logo
          +logo
        ul.header__menu.js-header__menu
          li.header__menu-item
            a.header__menu-link(
              href = "/mock-address/change-me"
            ) О нас
          li.header__menu-item.header__menu-item_dropdown
            span.header__menu-link(
              tabIndex = "0"
            ) Услуги
            ul.header__sub-menu
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href = "/mock-address/change-me"
                ) Трансфер
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href = "/mock-address/change-me"
                ) Экскурсии
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href = "/mock-address/change-me"
                ) Аренда бытовых приборов 
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href = "/mock-address/change-me"
                ) Массаж  
          li.header__menu-item  
            a.header__menu-link(
              href = "/mock-address/change-me"
            ) Вакансии
          li.header__menu-item  
            a.header__menu-link(
              href = "/mock-address/change-me"
            ) Новости
          li.header__menu-item.header__menu-item_dropdown  
            span.header__menu-link(
              tabIndex = "0"
            ) Соглашения
            ul.header__sub-menu
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href="/mock-address/change-me"
                ) Соглашение 1
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href="/mock-address/change-me"
                ) Соглашение 2
              li.header__sub-menu-item
                a.header__sub-menu-link(
                  href="/mock-address/change-me"
                ) Соглашение 3
        if options.loggedIn !== true        
          ul.header__user-nav    
            li.header__button-sign-in  
              +button({
                tag: "button",
                text: "Войти",
                type: "button",
                view: ["outline", "height_small"]
              })
            li.header__button-sign-up  
              +button({
                tag: "button",
                text: "Зарегистрироваться",
                type: "button",
                view: ["fill", "height_small"]
              })
          button.header__icon-sign-in
            img.header__icon-sign-in-img(
              src = require("../../components/header/img/login.svg")
              alt = "Войти"
            )
        if options.loggedIn == true
          .header__user-profile
            button.header__user-name= options.userName
            button.header__user-icon
              img.header__user-icon-img(
                src = require("../../components/header/img/user.svg")
                alt = "Меню пользователя"
              )
            ul.header__user-menu
              li.header__user-menu-item
                a.header__user-menu-link(
                  href = "/mock-address/change-me"
                ) Профиль  
              li.header__user-menu-item
                a.header__user-menu-link(
                  href = "/mock-address/change-me"
                ) Сообщения  
              li.header__user-menu-item
                a.header__user-menu-link(
                  href = "/mock-address/change-me"
                ) Помощь  
              li.header__user-menu-item
                a.header__user-menu-link(
                  href = "/mock-address/change-me"
                ) Выход  
          
          
          
          
          
          