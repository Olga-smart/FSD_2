//-
  Все параметры опциональны: 
  options.label - подпись
  options.min - минимально допустимое значение
  options.max - максимально допустимое значение
  options.from - значение "от" по умолчанию
  options.to - значение "до" по умолчанию
  options.step - шаг
  options.note - подпись внизу
  options.attributes - любые атрибуты, которые хотим передать инпуту

mixin range(options)

  if !options
    - options = {}
    
  .range
    if options.label
      .h3.range__title= options.label
    .range__output.js-range__output
    input.js-range-slider(type="text"
      data-min= options.min
      data-max= options.max
      data-from= options.from
      data-to= options.to
      data-step= options.step
      )&attributes(options.attributes)
    if options.note  
      .range__note= options.note   
    
