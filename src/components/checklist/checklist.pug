//-
  options.title - заголовок списка (опционален)
  options.uniqueName - уникальное имя для генерации id инпутов
  options.items - массив объектов пунктов
  options.items[0].label - текст пункта
  options.items[0].checked - состояние соответствующего чекбокса (true/false, по умолчанию false)
  options.listClass - дополнительный класс, который хотим примиксовать к контейнеру списка (не рекомендуется)

include ../../components/input/input

mixin checklist(options)
  .checklist
    if (options.title)
      .checklist__title.h3= options.title
    .checklist__list(class = options.listClass)
      - for (let i = 0; i < options.items.length; i++)
        +input({
          label: options.items[i].label,
          type: "checkbox",
          checked: options.items[i].checked,
          inputId: options.uniqueName + "-" + i
        })