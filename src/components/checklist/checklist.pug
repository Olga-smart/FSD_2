include ../../components/checkbox/checkbox

mixin checklist(options = {})
  - 
    const {
      title = "",
      items = [
        {label: "пункт 1", checked: true},
        {label: "пункт 2", checked: false},
        {label: "пункт 3", checked: true}
      ],
      rowGap = undefined
    } = options

  .checklist
    if (title)
      .checklist__title= title

    - const possibleRowGaps = ["small"]
    - const listClass = possibleRowGaps.includes(rowGap) ? `checklist__list_row-gap_${rowGap}` : ''

    .checklist__list(class = listClass)
      each item in items
        +checkbox({
          label: item.label,
          checked: item.checked
        })
