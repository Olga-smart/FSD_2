mixin button(options)
  if !options
    - options = {}
  
  - let classList = ['button']
  
  - if (options.view)
    - if ( Array.isArray(options.view) )      
      - for (let view of options.view)
        - classList.push("button_" + view)
    - else
      - classList.push("button_" + options.view)
    
  - if (options.class)
    - classList.push(options.class)
    
  - let list = classList.join(" ")
  
  - let tag = options.tag || "button"
  
  #{tag}(
    type = options.type || "button",
    disabled = options.disabled,
    class = list,
    href = options.href,
    hidden = options.hidden
  )
    span.button__text= options.text || "Click me"