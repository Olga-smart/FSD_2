doctype html
html(lang="ru")
  head
    meta(charset='utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title Colors & Type
    link(rel="stylesheet" href="../../style.scss")
    link(rel="stylesheet" href="colors-and-type.scss")
  body
    .container-fluid
      .colors-and-type-wrapper
        include ../../components/palette/palette
        +palette([
          ["Dark Shade 100%", "#1F2041", 1], 
          ["Dark Shade 75%", "#1F2041", 0.75], 
          ["Dark Shade 50%", "#1F2041", 0.50],
          ["Dark Shade 25%", "#1F2041", 0.25],
          ["Dark Shade 5%", "#1F2041", 0.05],
          ["Purple", "#BC9CFF", 1],
          ["Green", "#6FCF97", 1]
        ])
        .type
          h1 This one is the sub-section or widget title
          h2 Next one is the item title inside widgets
          h3 This is a label or CTA text
          p  This is the body text which is used for most of the design, like paragraphs, lists, etc.
    script(src="colors-and-type.js")
