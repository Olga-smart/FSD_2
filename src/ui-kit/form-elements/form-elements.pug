                  {
                    text: "Кровати",
                    defaultCount: 2,
                    minCount: 1
                  },
                  {
                    text: "Ванные комнаты"
                  }
                ],
                attributes: {
                  class: "default-dropdown"
                }
              })

              +dropdown({
                type: "facilities",
                label: "Dropdown",
                open: true,
                items: [
                  {
                    text: "Спальни",
                    defaultcount: 2,
                    minCount: 1
                  },
                  {
                    text: "Кровати",
                    defaultCount: 2,
                    minCount: 1
                  },
                  {
                    text: "Ванные комнаты"
                  }
                ],
                attributes: {
                  class: "expanded-dropdown"
                }
              })

          .col
            +dropdown({
              type: "guests",
              label: "Dropdown",
              open: true,
              items: [
                {
                  text: "Взрослые"
                },
                {
                  text: "Дети"
                },
                {
