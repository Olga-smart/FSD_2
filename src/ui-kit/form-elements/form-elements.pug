doctype html
html(lang="ru")
  head
    meta(charset='utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title Form Elements
    link(rel="stylesheet" href="../ui-kit.scss")
    link(rel="stylesheet" href="form-elements.scss")
  body.ui-kit-page
    .ui-kit-container
      .form-elements-wrapper
        include ../../components/input/input
        .col
          +input({
            class: "default-text-field",
            label: "text field",
            placeholder: "Email",
            type: "email"
          })
          +input({
            class: "hover-focus-text-field",
            label: "text field",
            value: "This is pretty awesome",
            type: "text"
          })
          
          .input
            label.input__label.h3 Dropdown
              .iqdropdown
                p.iqdropdown-selection
                .iqdropdown-menu
                  .iqdropdown-menu-option(data-id="item 1")
                    div
                      p.iqdropdown-item Взрослые
                  .iqdropdown-menu-option(data-id="item 2")
                    div
                      p.iqdropdown-item Дети
                  .iqdropdown-menu-option(data-id="item 3")
                    div
                      p.iqdropdown-item Младенцы
          
          input.datepicker-here
                  
          
          input.birthday-input(placeholder="ДД.ММ.ГГГГ")
    script(src="../../main.js")
    script(src="form-elements.js")
    
