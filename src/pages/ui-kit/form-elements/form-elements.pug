extends ../../../layouts/empty

block variables
  -
    const title = "Form Elements"
    const description = "UI Kit TOXIN: элементы форм"
    const keywords = "UI Kit, элементы форм"
    const bodyClass = "ui-kit-page"

block body
  .ui-kit-container
    .form-elements
      include ../../../components/input/input
      include ../../../components/dropdown/dropdown
      include ../../../components/button/button
      include ../../../components/datepicker/datepicker
      include ../../../components/checklist/checklist
      include ../../../components/like/like
      include ../../../components/rate/rate
      include ../../../components/range/range
      include ../../../components/expandable-checklist/expandable-checklist
      include ../../../components/rich-checklist/rich-checklist
      include ../../../components/bullet-list/bullet-list
      include ../../../components/icon-list/icon-list
      include ../../../components/comment/comment
      include ../../../components/pagination/pagination
      
      .col
        +input({
          class: "default-text-field",
          label: "text field",
          placeholder: "Email",
          type: "email"
        })
        
        +input({
          class: "hover-focus-text-field",
          label: "text field",
          value: "This is pretty awesome",
          type: "text"
        })
        
        +dropdown({
          type: "guests",
          label: "Dropdown"
        })
        
        .gap-37px.pt-3px
          +input({
            type: "date",
            label: "masked text field",
            placeholder: "ДД.ММ.ГГГГ"
          })

          .double-datepicker-wrap
            +datepicker({
              label: "date dropdown",
              type: "start"
            })

            +datepicker({
              label: "date dropdown",
              type: "end",
              value: "2021-08-18"
            })
        
          .col-266.gap-40px
            +datepicker({
              label: "filter date dropdown",
              value: "2021-08-19 - 2021-08-23",
              attributes: {
                "data-date-format": "d M"
              }
            })

            +input({
              label: "Subscription text field",
              placeholder: "Email",
              type: "email",
              name: "email",
              button: true
            })
        
      .col.gap-40px          
        +checklist({
          title: "Checkbox buttons",
          uniqueName: "checklist-example",
          items:[
            {
              label: "Можно курить"
            },
            {
              label: "Можно с питомцами",
              checked: true
            },
            {
              label: "Можно пригласить гостей <br> (до 10 человек)",
              checked: true
            }
          ] 
        })
        
        .radio-container
          .form-elements__heading Radio buttons
          +input({
            label: "Мужчина",
            type: "radio",
            name: "checkbox",
            checked: true,
            inputId: "radio-1"
          })
          +input({
            label: "Женщина",
            type: "radio",
            name: "checkbox",
            inputId: "radio-2"
          })
        
        .toggle-container
          .form-elements__heading Toggle
          +input({
            label: "Получать спецпредложения",
            type: "toggle",
            checked: true,
            inputId: "toggle-1"
          })
          +input({
            label: "Получать спецпредложения",
            type: "toggle",
            inputId: "toggle-2"
          })
        
        .like-container
          .form-elements__heading Like button
          +like({
            value: 2
          })
          +like({
            value: 12,
            checked: true
          })
          
        .rate-container  
          .form-elements__heading Rate button
          +rate({
            value: 4
          })
          +rate({
            value: 5
          })
        
      .col.gap-40px
        .col-266
          +range({
            label: "Range slider",
            min: 700,
            max: 15200,
            from: 5000,
            to: 10000,
            step: 10
          })
    
        .buttons-container
          .form-elements__heading Buttons
          .buttons-row
            +button({
              tag: "button",
              text: "Click me",
              type: "button",
              view: "fill"
            })
            +button({
              tag: "button",
              text: "Click me",
              type: "button",
              view: "fill",
              class: "button_fill_hovered"
            })

          .buttons-row  
            +button({
              tag: "button",
              text: "Click me",
              type: "button",
              view: "outline"
            })
            +button({
              tag: "button",
              text: "Click me",
              type: "button",
              view: "outline",
              class: "button_outline_hovered"
            }) 

          .buttons-row
            +button({
              tag: "button",
              text: "Click me",
              type: "button"
            })
            +button({
              tag: "button",
              text: "Click me",
              type: "button",
              class: "button_hovered"
            })

          +button({
            text: "Перейти к оплате",
            type: "button",
            view: ["fill", "width_full", "arrow_right"]
          })
          
        .pagination-container
          .form-elements__heading Pagination
          +pagination({
            itemsContainer: "pagination__items-container"
          })

      .dropdown-row.mt-5px    
        .col
          .col-266.gap-20px
            +dropdown({
              type: "facilities",
              label: "Dropdown",
              bedroomsDefaultCount: 2,
              bedroomsMinCount: 1,
              bedsDefaultCount: 2,
              bedsMinCount: 1,
              attributes: {
                class: "default-dropdown"
              }
            })

            +dropdown({
              type: "facilities",
              label: "Dropdown",
              open: true,
              bedroomsDefaultCount: 2,
              bedroomsMinCount: 1,
              bedsDefaultCount: 2,
              bedsMinCount: 1,
              attributes: {
                class: "expanded-dropdown"
              }
            })

        .col
          +dropdown({
            type: "guests",
            label: "Dropdown",
            open: true
          })

        .col
          +dropdown({
            type: "guests",
            label: "Dropdown",
            open: true,
            adultsDefaultCount: 2,
            childrenDefaultCount: 1
          })
        
      .col
        .col-266.gap-37px
          +expandable-checklist({
            title: "Expandable checkbox list",
            uniqueName: "expandable-checklist-example1",
            items: [
              {
                label: "Завтрак"
              },
              {
                label: "Письменный стол"
              },
              {
                label: "Стул для кормления"
              },
              {
                label: "Кроватка"
              },
              {
                label: "Телевизор"
              },
              {
                label: "Шампунь"
              }
            ]
          })
        
          +expandable-checklist({
            title: "Expandable checkbox list",
            uniqueName: "expandable-checklist-example2",
            opened: true,
            items: [
              {
                label: "Завтрак"
              },
              {
                label: "Письменный стол",
                checked: true
              },
              {
                label: "Стул для кормления",
                checked: true
              },
              {
                label: "Кроватка",
                checked: true
              },
              {
                label: "Телевизор"
              },
              {
                label: "Шампунь"
              }
            ] 
          })
        
      .col
        +rich-checklist({
          title: "Rich checkbox buttons",
          uniqueName: "rich-checklist-example",
          items: [
            {
              label: "Широкий коридор",
              sublabel: "Ширина коридоров в номере <br>не менее 91 см."
            },
            {
              label: "Помощник для инвалидов",
              sublabel: "На 1 этаже вас встретит специалист <br>и проводит до номера."
            }                
          ]
        })
        
      .col
        +bullet-list({
          title: "Bullet list",
          items: [
            "Нельзя с питомцами",
            "Без вечеринок и мероприятий",
            "Время прибытия — после 13:00, <br>а выезд до 12:00"
          ]
        })
        
      .col
        .col-266
          +icon-list({
            items: [
              {
                icon: require("../../../../public/img/emoticon.svg"),
                label: "Комфорт",
                sublabel: "Шумопоглощающие стены"
              },
              {
                icon: require("../../../../public/img/city.svg"),
                label: "Удобство",
                sublabel: "Окно в каждой из спален"
              }
            ]
          })
        
      .col-2.pt-10px  
        +comment({
          avatar: require("../../../../public/img/avatar1.jpg"),
          name: "Мурад Сарафанов",
          date: "2020-02-10",
          like: {
            value: 12,
            checked: true              
          },
          text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
        })
        
    #pagination__items-container
    - let n = 0;
    while n++ < 176
      .js-pagination__item

    
